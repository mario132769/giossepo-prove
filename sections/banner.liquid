<div class="banner" style="background-image: url({{ section.settings.image | image_url }});">
  <h1>{{ section.settings.heading }}</h1>
  <p>{{ section.settings.subheading }}</p>
</div>

{% schema %}
{
  "name": "Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen de fondo"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subtítulo"
    }
  ]
}
{% endschema %}
